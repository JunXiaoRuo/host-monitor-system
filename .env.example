# 主机巡视系统环境配置模板
# 复制此文件为 .env 并根据实际环境修改配置

# 应用基本配置
SECRET_KEY=your-secret-key-here-please-change-this
DEBUG=True
FLASK_DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=5000

# 数据库配置
# DATABASE_URL=sqlite:///instance/host_monitor.db  # 默认使用SQLite
# DATABASE_URL=mysql://user:password@localhost/host_monitor  # MySQL示例
# DATABASE_URL=postgresql://user:password@localhost/host_monitor  # PostgreSQL示例

# SSH连接配置
SSH_TIMEOUT=30
SSH_CONNECT_TIMEOUT=10

# 监控阈值配置
DEFAULT_CPU_THRESHOLD=90.0
DEFAULT_MEMORY_THRESHOLD=90.0
DEFAULT_DISK_THRESHOLD=90.0

# 日志配置
LOG_FILE=host_monitor.log
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_RETENTION_DAYS=30
# 控制台日志配置
CONSOLE_LOG_ENABLED=True          # 以生产模式启动会自动配置为False
CONSOLE_LOG_LEVEL=INFO

# 报告配置
REPORT_DIR=reports

# 调度器配置
SCHEDULER_API_ENABLED=True

# 安全配置
# 生产环境中请生成新的强密钥
ENCRYPTION_KEY=your-encryption-key-here

# 通知配置
# WEBHOOK_TIMEOUT=30
# DEFAULT_NOTIFICATION_CHANNEL=

# 性能配置
# MAX_CONCURRENT_MONITORS=10
# MONITOR_TIMEOUT=300